<h1>New User</h1>
<%= form_for :user, url: users_path do |u| %>
	<p>
		<%= u.label :name %><br>
		<%= u.text_field :name %>
	</p>
	<p>
		<%= u.label :email %><br>
		<%= u.text_field :email %>
	</p>
	<p>
		<%= u.label :password %><br>
		<%= u.password_field :password %>
	</p>
	<p>
		<%= u.label :password_confirmation %><br>
		<%= u.password_field :password_confirmation %>
	</p>
	<p>
		<%= u.submit %>
	</p>
<% end %>
	
